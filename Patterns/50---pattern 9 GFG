class Solution:
    def printDiamond(self, N):
        for i in range(N):
            for j in range(N-i-1):
                print(" ",end="")
            for h in range(i+1):
                print("*",end=" ")
            # for g in range(N-i-1):
            #     print(" ",end="")
            print("")
        # print("")
        for i in range(N):
            for j in range(i):
                print(" ",end="")
            for h in range(N-i):
                print("*",end=" ")
            # for k in range(i):
            #     print(" ",end="")
            print("")
                
                
        # Code here

